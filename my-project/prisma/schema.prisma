generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  points    Int        @default(0)
  purchases Purchase[]
}

model Item {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  price       Int?
  purchases   Purchase[]
}

model Purchase {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    Int
  createdAt DateTime @default(now())
}
